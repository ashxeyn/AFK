@page "/counter"
@inject IJSRuntime JSRuntime

<PageTitle>Counter - Minecraft AFK Calculator</PageTitle>

<!-- Navigation using Minecraft CSS Framework -->
<nav class="navbar">
    <div class="navbar-brand">AFK Calculator</div>
    <ul class="navbar-nav">
        <li><a href="/">üè† Home</a></li>
        <li><a href="/counter">üî¢ Counter</a></li>
        <li><a href="#">‚ùì Help</a></li>
    </ul>
</nav>

<!-- Main Content -->
<div class="container">
    <!-- Hero Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1>Item Counter</h1>
                </div>
                <div class="card-body">
                    <h3>Track Your Collection Progress</h3>
                    <p>Keep track of items collected during your AFK sessions with this Minecraft-style counter tool.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Counter Card -->
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h2>üì¶ Item Collection Counter</h2>
                </div>
                <div class="card-body">
                    <div class="result-display">
                        <img src="https://minecraft.wiki/images/f/f7/Bundle_JE2_BE1.png" alt="Bundle" class="result-icon">
                        <div class="result-label">Items Collected</div>
                        <div class="result-value">@currentCount</div>
                    </div>
                    
                    <div class="button-group">
                        <button class="button button-primary" @onclick="IncrementCount">
                            ‚ûï Collect Item
                        </button>
                        
                        @if (currentCount > 0)
                        {
                            <button class="button button-secondary" @onclick="DecrementCount">
                                ‚ûñ Remove Item
                            </button>
                            
                            <button class="button button-tertiary" @onclick="ResetCount">
                                üóëÔ∏è Empty Collection
                            </button>
                        }
                    </div>
                    
                    @if (currentCount > 0)
                    {
                        <div class="progress-section">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @(Math.Min(100, (currentCount / 64.0) * 100))%"></div>
                            </div>
                            <div class="progress-text">@currentCount / 64 items (Stack Progress)</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    
    private void DecrementCount()
    {
        if (currentCount > 0)
        {
            currentCount--;
        }
    }
    
    private void ResetCount()
    {
        currentCount = 0;
    }
}
