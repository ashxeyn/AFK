@code {
    private async Task PlayButtonSound()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("playButtonSound");
        }
        catch (Exception ex)
        {
            // Silently handle any audio playback errors
            Console.WriteLine($"Audio playback failed: {ex.Message}");
        }
    }
}
